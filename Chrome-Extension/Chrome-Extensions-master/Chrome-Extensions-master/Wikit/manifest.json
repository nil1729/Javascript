{
  "manifest_version": 2,

  "name": "Wikit",
  "description": "Search Wikipedia on the go!",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [  
          "tabs",      
          "contextMenus"
        ]
}